# Include important files in the source distribution
include README.md
include LICENSE
include PUBLISHING_GUIDE.md
include pyproject.toml

# Include examples
recursive-include examples *.py

# Exclude compiled files and cache
global-exclude *.pyc
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude test and development files
exclude .gitignore
exclude *.log
exclude test_*
