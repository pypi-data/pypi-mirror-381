<odoo>
    <record id="microsoft_drive_reset_account_form_view" model="ir.ui.view">
        <field name="name">microsoft.drive.account.reset.form.view</field>
        <field name="model">microsoft.drive.account.reset</field>
        <field name="arch" type="xml">
            <form>
                <h1>Reset Outlook Drive Account?</h1>
                <footer>
                    <button
                        name="reset_account"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                        data-hotkey="q"
                    />
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                        data-hotkey="z"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="microsoft_drive_reset_account_action" model="ir.actions.act_window">
        <field name="name" />
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">microsoft.drive.account.reset</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
