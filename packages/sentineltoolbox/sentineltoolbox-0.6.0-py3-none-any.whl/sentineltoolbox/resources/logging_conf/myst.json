{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {
    "skip_eopf_logger": {
      "()": "sentineltoolbox.logging_utils.EopfFilter"
    }
  },
  "formatters": {
    "default": {
      "format": "[%(levelname)-8s][%(name)s] %(asctime)s  %(module)s.%(funcName)s:%(lineno)d: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "file": {
      "class": "logging.FileHandler",
      "formatter": "default",
      "level": "DEBUG",
      "filename": "cpm.log",
      "mode": "w",
      "filters": [
        "skip_eopf_logger"
      ]
    },
    "console": {
      "class": "logging.StreamHandler",
      "formatter": "default",
      "level": "CRITICAL",
      "stream": "ext://sys.stderr"
    }
  },
  "root": {
    "handlers": [
      "console",
      "file"
    ],
    "level": "DEBUG"
  }
}
