<odoo>
<record id="faktur_pajak_keluaran_ou" model="ir.rule">
    <field
            name="name"
        >Faktur Pajak Keluaran - Responsible to operating unit data</field>
    <field
            name="model_id"
            ref="ssi_l10n_id_taxform_faktur_pajak.model_faktur_pajak_keluaran"
        />
    <field name="groups" eval="[(4, ref('faktur_pajak_keluaran_ou_group'))]" />
    <field
            name="domain_force"
        >[('operating_unit_id','in',[g.id for g in user.operating_unit_ids])]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
