<odoo>
<record id="faktur_pajak_keluaran_view_tree" model="ir.ui.view">
    <field name="name">faktur_pajak_keluaran - Operating Unit Tree</field>
    <field name="model">faktur_pajak_keluaran</field>
    <field
            name="inherit_id"
            ref="ssi_l10n_id_taxform_faktur_pajak.faktur_pajak_keluaran_view_tree"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field
                        name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"
                        optional="hide"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="faktur_pajak_keluaran_search" model="ir.ui.view">
    <field name="name">faktur_pajak_keluaran - Operating Unit Search</field>
    <field name="model">faktur_pajak_keluaran</field>
    <field
            name="inherit_id"
            ref="ssi_l10n_id_taxform_faktur_pajak.faktur_pajak_keluaran_search"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field
                        name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"
                        optional="hide"
                    />
            </xpath>
            <xpath expr="//filter[@name='grp_company']" position="after">
                <filter
                        name="grp_ou"
                        string="Operating Unit"
                        context="{'group_by':'operating_unit_id'}"
                        groups="operating_unit.group_multi_operating_unit"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="faktur_pajak_keluaran_view_form" model="ir.ui.view">
    <field name="name">faktur_pajak_keluaran - Operating Unit Form</field>
    <field name="model">faktur_pajak_keluaran</field>
    <field
            name="inherit_id"
            ref="ssi_l10n_id_taxform_faktur_pajak.faktur_pajak_keluaran_view_form"
        />
    <field name="arch" type="xml">
      <data>
          <xpath expr="//field[@name='company_id']" position="after">
              <field
                        name="operating_unit_id"
                        groups="operating_unit.group_multi_operating_unit"
                        optional="hide"
                    />
          </xpath>
      </data>
    </field>
</record>
</odoo>
