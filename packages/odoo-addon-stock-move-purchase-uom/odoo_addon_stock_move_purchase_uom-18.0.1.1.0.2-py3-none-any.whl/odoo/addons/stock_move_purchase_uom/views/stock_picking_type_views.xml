<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_picking_type_form_purchase_uom">
        <field name="name">stock.picking.type.form.purchase.uom</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_backorder']" position="after">
                <field name="use_purchase_uom" />
                <field
                    name="purchase_uom_rounding_method"
                    invisible="use_purchase_uom == False"
                    required="use_purchase_uom == True"
                />
            </xpath>
        </field>
    </record>
</odoo>
