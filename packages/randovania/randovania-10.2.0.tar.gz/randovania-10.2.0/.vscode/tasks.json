{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create venv with all exporters",
            "type": "shell",
            "command": "uv sync --all-extras --all-groups"
        },
        {
            "label": "Regenerate UI",
            "type": "shell",
            "linux": {
                "command": "${command:python.interpreterPath} '${workspaceFolder}/tools/uic_wrapper.py' '${workspaceFolder}' --all-ui-files",
                "options": {
                    "env": {
                        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
                    }
                }
            },
            "windows": {
                "command": "& '${command:python.interpreterPath}' '${workspaceFolder}/tools/uic_wrapper.py' '${workspaceFolder}' --all-ui-files",
                "options": {
                    "env": {
                        "PATH": "${workspaceFolder}/.venv/Scripts;${env:PATH}"
                    }
                }
            }
        },
        {
            "label": "Launch Prerequisites",
            "dependsOn": [
                "Create venv with all exporters",
                "Regenerate UI"
            ]
        },
        {
            "label": "Run all tests on all cores",
            "type": "shell",
            "linux": {
                "command": "${command:python.interpreterPath} -m pytest -n auto '${workspaceFolder}/test'"
            },
            "windows": {
                "command": "& '${command:python.interpreterPath}' -m pytest -n auto '${workspaceFolder}/test'"
            }
        }
    ]
}