{
    "description": "Detect language",
    "command": "./langid.py ${DEBUG:+--debug} ${ALLOW_UNKNOWN:+--allow-unknown} ${ALLOW_SIMILAR:+--allow-similar} $SRC_LANG $TRG_LANG",
    "parameters":
    {
        "SRC_LANG":
        {
            "type": "str",
            "default": ""
        },
        "TRG_LANG":
        {
            "type": "str",
            "default": ""
        },
        "ALLOW_SIMILAR":
        {
            "type": "bool",
            "default": true
        },
        "ALLOW_UNKNOWN":
        {
            "type": "bool",
            "default": true
        },
        "DEBUG":
        {
            "type": "bool"
        }
    },
    "type": "bilingual"
}
