<?xml version="1.0" ?>
<odoo>
    <!-- Partner -->

    <record id="view_partner_create_by_vat_einvoice" model="ir.ui.view">
        <field name="name">res.partner.create.by.vat.einvoice</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="l10n_ro_config.view_partner_create_by_vat" />
        <field name="arch" type="xml">
            <field name="l10n_ro_vat_number" position="after">
                <field
                    name="l10n_ro_old_name"
                    placeholder="Old Name"
                    invisible="not is_company"
                />
            </field>
        </field>
    </record>

    <record id="view_partner_anaf_status_form" model="ir.ui.view">
        <field name="name">res.partner.anaf.status.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <page name="accounting" position="after">
                <page
                    string="ANAF"
                    name="l10n_ro_anaf_info"
                    groups="l10n_ro_config.group_ro_menus"
                >
                    <group string="ANAF History">
                        <separator string="ANAF - Active State History" />
                        <field
                            name="l10n_ro_active_anaf_line_ids"
                            readonly="1"
                            force_save="1"
                            nolabel="1"
                            colspan="4"
                        >
                            <list>
                                <field name="partner_id" column_invisible="1" />
                                <field name="act" />
                                <field name="status" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="publish_date" />
                                <field name="delete_date" />
                                <field name="active_status" />
                            </list>
                        </field>
                        <separator string="ANAF - VAT Subjected History" />
                        <field
                            name="l10n_ro_vat_subjected_anaf_line_ids"
                            readonly="1"
                            force_save="1"
                            nolabel="1"
                            colspan="4"
                        >
                            <list>
                                <field name="partner_id" column_invisible="1" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="year_date" />
                                <field name="message" />
                            </list>
                        </field>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
