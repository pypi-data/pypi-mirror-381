{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "[LEARNER] [%(levelname)s] %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "simple",
            "filename": "info.log",
            "encoding": "utf8"
        }
    },
    "loggers": {
        "": {
            "handlers": ["file", "console"],
            "propagate": true,
            "level": "INFO"
        },
        "py.warnings": {
            "propagate": true
        }
    }
}
