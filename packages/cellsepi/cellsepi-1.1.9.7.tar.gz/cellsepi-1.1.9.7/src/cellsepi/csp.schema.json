{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CellSePi Pipeline",
  "description": "An schema for pipelines for CellSePi",
  "type": "object",
  "properties": {
    "version": {"type": "string",
      "enum": ["csp-1.0"]
    },
    "modules": {
        "description": "All modules of the pipeline",
        "type": "array",
        "items": {
          "type": "object",
          "description": "A module of the pipeline",
          "properties": {
            "module_id": {"type": "string"},
            "module_name": {"type": "string"},
            "position":{
              "type": "object",
              "description": "The position of the module",
              "properties": {
                "x":{"type": "number"},
                "y":{"type": "number"}
              },
              "required": ["x","y"]
            },
            "user_attributes":{
              "type": "array",
              "description": "The user attributes of the module",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "value": {"type": ["string", "number", "boolean"]},
                  "attr_type": {"type": "string"}
                },
                "required": ["name","value","attr_type"]
              },
              "minItems": 0,
              "uniqueItems": true
            }
          }
        },
        "minItems": 1,
        "uniqueItems": true
    },
    "pipes": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A pipe between two modules",
        "properties": {
          "source": {"type": "string"},
          "target": {"type": "string"},
          "ports": {"type":  "array"}
        },
        "required": ["source","target","ports"]
      },
      "minItems": 0,
      "uniqueItems": true
    },
    "view": {
      "type": "object",
      "properties": {
        "offset_x": {"type": "number"},
        "offset_y": {"type": "number"},
        "scale": {"type": "number"}
      },
      "required": ["offset_x","offset_y","scale"]
    }
  },
  "required": [ "version", "modules", "pipes", "view"]
}