{% if request.shop and not search_disabled %}
<form action="/search" id="search" name="search" style="margin-bottom: 0px;">

  {% include 'csrf.j2' %}
  {%- if request.shop -%}
  <input type="hidden" name="shop_id" value="{{ request.shop.id }}">
  {%- endif %}

  <input type="text"
    name="keywords"
    id="keywords"
    class="mps-keywords"
    placeholder="Keyword search on {{ request.shop.name }}"
    {% if keywords %}value="{{ keywords }}"{% endif %}
    style="margin-bottom: 0px;"
  required/>

</form>

{% if keywords and not products %}
<br />
<b>No matches.</b>
{% endif %}

{% endif %}
