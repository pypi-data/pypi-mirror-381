<odoo>
    <record id="res_config_settings_view_form_cycle_adjustment" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.cycle.adjustment</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block name="barcode_setting_container" position="after">
                <block title="Cycle Count" name="cycle_count_container">
                    <setting
                        id="cycle_count_setting_container"
                        company_dependent="1"
                        help="If enabled, confirming a Cycle Count will start the related Inventory Adjustment"
                        string="Auto Start Inventory Adjustment"
                    >
                        <field name="auto_start_inventory_from_cycle_count" />
                    </setting>
                    <setting
                        id="default_counted_quantities_setting_container"
                        string="Default Counted Quantity Mode"
                        help="Sets default counted quantities in Inventory Adjustments"
                    >
                        <field
                            name="inventory_adjustment_counted_quantities"
                            class="w-100"
                        />
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
