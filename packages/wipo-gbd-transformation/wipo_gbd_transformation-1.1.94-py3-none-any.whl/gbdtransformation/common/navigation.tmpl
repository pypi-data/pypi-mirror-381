{% macro match(path, scope) -%}
    {% for elem in scope | matchpath(path) %}
        {% if elem %} {{ caller(elem) }} {% endif %}
    {% endfor %}
{%- endmacro %}

{% macro enumerate(path, scope) -%}
    {% for elem in scope | matchpath(path) %}
        {% if elem %} {{ caller(elem, loop.index) }} {% endif %}
    {% endfor %}
{%- endmacro %}

