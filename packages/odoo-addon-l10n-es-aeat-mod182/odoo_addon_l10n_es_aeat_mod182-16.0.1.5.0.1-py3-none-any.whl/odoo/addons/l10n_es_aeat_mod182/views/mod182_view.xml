<odoo>

    <!-- ##########################################
               AEAT MODEL 182 PARTNER RECORD
         ########################################## -->

    <!-- Tree view -->
    <record model="ir.ui.view" id="view_l10n_es_aeat_mod182_partner_record_tree">
        <field name="model">l10n.es.aeat.mod182.partner_record</field>
        <field name="arch" type="xml">
            <tree
                decoration-warning="state=='exception'"
                decoration-muted="state=='confirmed'"
                decoration-danger="check_ok==False"
            >
                <field name="operation_key" />
                <field name="partner_vat" />
                <field name="partner_id" />
                <field name="amount" />
                <button
                    type="object"
                    name="button_print"
                    icon="fa-print"
                    string="Print"
                />
                <button
                    type="object"
                    name="action_send"
                    icon="fa-envelope"
                    states="pending"
                    string="Send email"
                />
                <field name="state" />
                <button
                    type="object"
                    name="action_confirm"
                    icon="fa-check"
                    states="pending,sent,exception"
                    string="Confirm as valid"
                />
                <button
                    type="object"
                    name="action_exception"
                    icon="fa-times"
                    states="pending,sent,confirmed"
                    string="Set to invalid"
                />
                <field name="check_ok" />
                <field
                    name="error_text"
                    optional="show"
                    attrs="{'invisible': [('check_ok', '=', True)]}"
                />
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="view_l10n_es_aeat_mod182_partner_record_form">
        <field name="model">l10n.es.aeat.mod182.partner_record</field>
        <field name="arch" type="xml">
            <form string="Partner Record">
                <header>
                    <button
                        name="button_recompute"
                        string="Recompute"
                        type="object"
                        attrs="{'invisible': [('operation_key', 'not in', ('A', 'B'))]}"
                    />
                    <button
                        name="action_exception"
                        states="pending,sent,confirmed"
                        string="Set to invalid"
                        type="object"
                    />
                    <button
                        name="action_send"
                        states="pending,exception"
                        string="Send"
                        type="object"
                    />
                    <button
                        name="action_confirm"
                        states="pending,sent"
                        string="Confirm as valid"
                        type="object"
                    />
                    <button
                        name="action_pending"
                        states="exception,sent,confirmed"
                        string="Set to Pending"
                        type="object"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="pending,sent,confirmed"
                    />
                </header>
                <sheet string="Partner Record">
                    <notebook>
                        <page string="Partner info">
                            <group>
                                <group string="1">
                                    <field name="partner_id" />
                                    <field name="check_ok" invisible="1" />
                                    <field
                                        name="error_text"
                                        attrs="{'invisible': [('check_ok', '=', True)]}"
                                        class="text-danger"
                                    />
                                    <field name="partner_vat" select="1" />
                                    <field name="representative_vat" select="2" />
                                    <field name="community_vat" />
                                </group>
                                <group string="2">
                                    <field name="partner_state_code" />
                                    <field name="partner_country_code" />
                                    <field name="operation_key" select="2" />
                                    <field name="user_id" />
                                </group>
                                <group string="3">
                                    <field
                                        name="deduction_percentage"
                                        placeholder="e.g. 0.00"
                                    />
                                    <field
                                        name="donation_amount"
                                        placeholder="e.g. 0.00"
                                    />
                                    <field name="donation_or_contribution_in_kind" />
                                </group>
                                <group string="4">
                                    <field
                                        name="regional_community_deduction_id"
                                        placeholder="e.g. CATALUÑA"
                                    />
                                    <field
                                        name="regional_deduction_percentage"
                                        placeholder="e.g. 0.00"
                                        attrs="{'readonly': [('regional_community_deduction_id', '=', False)]}"
                                    />
                                </group>
                                <group string="5">
                                    <field name="declared_nature" />
                                    <field name="revocation" />
                                    <field name="year_of_revoked_donation" />
                                </group>
                                <group string="6">
                                    <field name="kind_of_good" />
                                    <field
                                        name="item_identification"
                                        placeholder="e.g. NRC or ISIN identification"
                                    />
                                    <field name="donation_recurrence" />
                                </group>
                                <group string="7">
                                    <field
                                        name="protected_patrimony_holder_nif"
                                        placeholder="e.g. 00000000A"
                                    />
                                    <field name="protected_patrimony_holder_name" />
                                </group>
                            </group>
                        </page>
                        <page string="Details">
                            <div attrs="{'invisible': [('operation_key', '!=', 'B')]}">
                                <strong>Color codes: </strong> <span
                                    class="text-info"
                                >Normal invoices</span> - Refund invoices </div>
                            <div attrs="{'invisible': [('operation_key', '=', 'B')]}">
                                <strong>Color codes: </strong> <span
                                    class="text-info"
                                >Refund invoices</span> - Normal invoices</div>
                            <field
                                name="move_record_ids"
                                context="{'partner_record_id': active_id}"
                                readonly="True"
                            >
                                <tree
                                    decoration-info="(amount &gt; 0 and parent.operation_key == 'B') or (amount &lt; 0 and parent.operation_key == 'A')"
                                >
                                    <field name="move_id" />
                                    <field name="date" />
                                    <field name="amount" />
                                </tree>
                                <form string="Move record">
                                    <group>
                                        <field name="move_id" />
                                        <field name="amount" />
                                    </group>
                                </form>
                            </field>
                            <field
                                name="cash_record_ids"
                                context="{'partner_record_id': active_id}"
                                readonly="True"
                            >
                                <tree>
                                    <field name="move_id" />
                                    <field name="date" />
                                    <field name="balance" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="partner_record_search_view" model="ir.ui.view">
        <field name="model">l10n.es.aeat.mod182.partner_record</field>
        <field name="arch" type="xml">
            <search string="Partner Record">
                <field
                    name="partner_id"
                    string="Partner"
                    filter_domain="[('partner_id','ilike',self)]"
                />
                <field
                    name="operation_key"
                    string="Operation key"
                    filter_domain="[('operation_key','ilike',self)]"
                />
                <field
                    name="partner_vat"
                    string="Record"
                    filter_domain="['|',('partner_vat','ilike',self),('partner_id','ilike',self)]"
                />
                <separator />
                <filter
                    name="filter_invalid"
                    string="Invalid records"
                    domain="[('check_ok', '=', False)]"
                />
                <filter
                    name="filter_pending"
                    string="Pending records"
                    domain="[('state', 'in', ('pending', 'sent'))]"
                />
                <filter
                    name="filter_exception"
                    string="Records in exception"
                    domain="[('state', '=', 'exception')]"
                />
                <separator />
                <group expand='0' string='Group by...'>
                    <filter
                        name="operation_key_group"
                        string='Operation key'
                        domain="[]"
                        context="{'group_by' : 'operation_key'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <!-- #################
    ### AEAT MODEL 182 ###
    ################## -->

    <!-- Tree view -->
    <record id="view_l10n_es_aeat_mod182_report_tree" model="ir.ui.view">
        <field name="model">l10n.es.aeat.mod182.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_tree" />
        <field name="arch" type="xml">
            <field name="period_type" position="after">
                <field name="total_partner_records" />
                <field name="total_amount" />
            </field>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_l10n_es_aeat_mod182_report_form" model="ir.ui.view">
        <field name="model">l10n.es.aeat.mod182.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_form" />
        <field name="arch" type="xml">
            <button name="button_recalculate" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="button_cancel" position="attributes">
                <attribute name="confirm">
                    This will delete all records, and remove possible answers
                    from partners. Are you sure you want to continue?
                </attribute>
            </button>
            <button name="button_confirm" position="before">
                <button
                    name="button_send_mails"
                    type="object"
                    string="Send emails"
                    states="calculated"
                    confirm="This will enqueue all the pending confirmation emails for this report for sending to the invoicing contact. Are you sure you want to continue?"
                    icon="fa-envelope"
                />
            </button>
            <field name="partner_bank_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <group name="group_declaration" position="after">
                <notebook>
                    <page string="General">
                        <group>
                            <group string="Calculation parameters">
                                <field
                                    name="declarant_nature"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                                />
                                <group string="Persones Físiques (IRPF)">
                                    <field
                                        name="under_limit_percentage"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="under_limit_value"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="rest_3_years_old_value"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="rest_percentage_value"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                </group>
                                <group string="Persones Jurídiques (IS)">
                                    <field
                                        name="general_percentage"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                    <field
                                        name="over_3_years_value"
                                        attrs="{'readonly': [('state', '!=', 'draft')]}"
                                    />
                                </group>
                                <!-- <field
                                    name="operations_limit"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                                />
                                <field
                                    name="received_cash_limit"
                                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                                /> -->
                            </group>
                            <group
                                string="Summary"
                                attrs="{'invisible': [('state', 'in', ('draft', 'cancelled'))]}"
                            >
                                <field name="total_partner_records" />
                                <field name="total_amount" />
                            </group>
                        </group>
                    </page>
                    <page
                        string="Partner records"
                        attrs="{'invisible': [('state', 'in', ('draft', 'cancelled'))]}"
                    >
                        <div class="oe_button_box" name="button_box">
                            <button
                                class="oe_stat_button"
                                name="btn_list_records"
                                type="object"
                                icon="fa-file"
                            >
                                <field
                                    name="total_partner_records"
                                    widget="statinfo"
                                    string="Records"
                                />
                            </button>
                        </div>
                        <field name="partner_record_ids" nolabel="1" />
                    </page>
                </notebook>
            </group>
            <form position="inside">
                <div class="oe_chatter">
                    <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        groups="base.group_user"
                    />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Window action -->
    <record id="action_l10n_es_aeat_mod182_report" model="ir.actions.act_window">
        <field name="name">AEAT Model 182</field>
        <field name="res_model">l10n.es.aeat.mod182.report</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a AEAT Model 182 Reports.
            </p>
            <p>
                Basado en la Orden EHA/3012/2008, de 20 de Octubre, por el que se aprueban
                los diseños físicos y lógicos del 182.
            </p>
        </field>
    </record>
    <record
        model="ir.actions.act_window.view"
        id="action_l10n_es_aeat_mod182_report_tree"
    >
        <field name="sequence" eval="2" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod182_report_tree" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod182_report" />
    </record>
    <record
        model="ir.actions.act_window.view"
        id="action_l10n_es_aeat_mod182_report_form"
    >
        <field name="sequence" eval="3" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod182_report_form" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod182_report" />
    </record>

    <!-- ### MENU ACCESS ### -->

    <menuitem
        id="menu_aeat_mod182_report"
        parent="l10n_es_aeat.menu_root_aeat"
        action="action_l10n_es_aeat_mod182_report"
        sequence="182"
        name="AEAT 182 model"
    />

</odoo>