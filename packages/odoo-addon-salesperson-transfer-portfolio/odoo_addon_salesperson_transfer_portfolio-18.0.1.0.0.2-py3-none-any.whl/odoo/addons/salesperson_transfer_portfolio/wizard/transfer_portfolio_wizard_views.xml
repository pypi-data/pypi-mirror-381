<odoo>
    <record id="transfer_portfolio_wizard_form" model="ir.ui.view">
        <field name="name">transfer.portfolio.wizard.form</field>
        <field name="model">transfer.portfolio.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Portfolio">
                <field name="review_state" invisible="1" />
                <field name="is_server_action" invisible="1" />
                <field name="server_action_type" invisible="1" />
                <div
                    class="alert alert-info w-100 d-flex align-items-center gap-1"
                    role="status"
                    invisible="not is_server_action"
                >
                    <i class="fa fa-info-circle" aria-hidden="true" />
                    <span
                    >Some opportunities have been excluded because their stages do not allow transfer.</span>
                </div>
                <group>
                    <group>
                        <field
                            class="text-break"
                            name="current_salesperson"
                            options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                            readonly="review_state"
                            required="not is_server_action"
                            invisible="is_server_action"
                        />
                        <field name="is_server_action" invisible="1" />
                        <field name="update_salesperson_contact" />
                        <field name="transfer_activities" />
                    </group>
                    <group>
                        <field
                            class="text-break"
                            name="new_salesperson"
                            options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"
                        />
                    </group>
                </group>
                <group>
                    <button
                        string="Clear Records"
                        name="clear_records"
                        type="object"
                        class="btn-primary"
                        invisible="not contact_ids or is_server_action"
                    />
                </group>
                <notebook invisible="not review_state">
                    <page string="Contacts" invisible="not update_salesperson_contact">
                        <field name="contact_ids">
                            <list create="0" delete="0">
                                <field name="name" />
                            </list>
                        </field>
                    </page>
                    <page string="Opportunities">
                        <field name="opportunity_ids">
                            <list create="0" delete="0">
                                <field name="name" />
                            </list>
                        </field>
                    </page>
                    <page
                        string="Opportunities Activities"
                        invisible="not transfer_activities"
                    >
                        <field name="transfer_activities" invisible="1" />
                        <field name="activity_ids">
                            <list
                                create="0"
                                delete="0"
                                default_order='user_id, res_model'
                            >
                                <field name="user_id" />
                                <field name="summary" string="Activitie" />
                                <field name="res_model" invisible="1" />
                                <field name="res_model_id" />
                                <field name="res_name" />
                            </list>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button
                        string="Review"
                        name="review_transfer"
                        type="object"
                        class="btn-primary"
                        invisible="review_state"
                    />
                    <button
                        string="Transfer"
                        name="transfer_portfolio"
                        type="object"
                        class="btn-primary"
                        invisible="not review_state"
                    />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_transfer_portfolio" model="ir.actions.act_window">
        <field name="name">Transfer Portfolio</field>
        <field name="res_model">transfer.portfolio.wizard</field>
        <field name="view_mode">form</field>
        <field
            name="view_id"
            ref="salesperson_transfer_portfolio.transfer_portfolio_wizard_form"
        />
        <field name="target">new</field>
    </record>

    <menuitem
        id="transfer_client_portfolio_menu"
        name="Transfer Client Portfolio"
        parent="crm.crm_menu_sales"
        action="salesperson_transfer_portfolio.action_transfer_portfolio"
        sequence="5"
    />
</odoo>
