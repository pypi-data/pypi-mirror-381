<odoo>
    <record id="transfer_client_portfolio_crm_lead_view_form" model="ir.ui.view">
        <field name="name">transfer.client.portfolio.crm.lead.view.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position='after'>
                <field
                    name="previous_salesperson_id"
                    invisible="not previous_salesperson_id"
                />
            </xpath>
        </field>
    </record>
    <record id="crm_action_transfer_portfolio_server_action" model="ir.actions.server">
        <field name="name">Transfer selected opportunities</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_crm_lead" />
        <field
            name="groups_id"
            eval="[(4, ref('salesperson_transfer_portfolio.transfer_client_portfolio_access'))]"
        />
        <field name="binding_model_id" ref="model_crm_lead" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.transfer_portfolio_server_action()
        </field>
    </record>
</odoo>
