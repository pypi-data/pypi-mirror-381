<odoo>
    <record id="portfolio_transfer_registry_tree" model="ir.ui.view">
        <field name="name">portfolio.transfer.registry.tree</field>
        <field name="model">portfolio.transfer.registry</field>
        <field name="arch" type="xml">
            <list create="0" delete="0">
                <field name="user_made_transfer_id" />
                <field name="date_transfer" />
                <field name="previous_salesperson_id" />
                <field name="new_salesperson_id" />
            </list>
        </field>
    </record>

    <record id="portfolio_transfer_registry_form" model="ir.ui.view">
        <field name="name">portfolio.transfer.registry.form</field>
        <field name="model">portfolio.transfer.registry</field>
        <field name="arch" type="xml">
            <form
                string="Registry of Transfer Portfolio"
                create="0"
                delete="0"
                edit="0"
            >
                <group>
                    <group>
                        <field name="user_made_transfer_id" />
                        <field name="date_transfer" />
                        <field name="previous_salesperson_id" />
                        <field name="new_salesperson_id" />
                    </group>
                    <group>
                        <field name="list_contacts_ids" />
                        <field name="list_opportunity_ids" />
                        <field name="list_activity_ids" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="portfolio_transfer_registry_search" model="ir.ui.view">
        <field name="name">portfolio.transfer.registry.search</field>
        <field name="model">portfolio.transfer.registry</field>
        <field name="arch" type="xml">
            <search string="Search Transfers">
                <field name="date_transfer" string="Transfer Date" />
                <field name="user_made_transfer_id" string="Transfer made by" />
                <field name="previous_salesperson_id" string="Previous Salesperson" />
                <field name="new_salesperson_id" string="New Salesperson" />
                <group string="Group By">
                    <filter
                        name="date_transfer"
                        string="Transfer Date"
                        context="{'group_by': 'date_transfer'}"
                    />
                    <filter
                        name="user_made_transfer_id"
                        string="Transfer made by"
                        context="{'group_by': 'user_made_transfer_id'}"
                    />
                    <filter
                        name="previous_salesperson_id"
                        string="Previous Salesperson"
                        context="{'group_by': 'previous_salesperson_id'}"
                    />
                    <filter
                        name="new_salesperson_id"
                        string="New Salesperson"
                        context="{'group_by': 'new_salesperson_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="action_portfolio_transfer_registry" model="ir.actions.act_window">
        <field name="name">Registry of Transfers Clients Portfolios</field>
        <field name="res_model">portfolio.transfer.registry</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field
            name="view_id"
            ref="salesperson_transfer_portfolio.portfolio_transfer_registry_tree"
        />
    </record>

    <menuitem
        id="portfolio_transfer_registry_menu"
        parent="crm.crm_menu_report"
        name="Transfers Clients Portfolios"
        action="salesperson_transfer_portfolio.action_portfolio_transfer_registry"
        sequence="99"
    />
</odoo>
