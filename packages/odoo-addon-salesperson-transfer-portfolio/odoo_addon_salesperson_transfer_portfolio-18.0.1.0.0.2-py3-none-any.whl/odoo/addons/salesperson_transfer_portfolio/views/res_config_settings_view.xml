<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@name='generate_lead_setting_container']"
                position="after"
            >
                <block
                    title="Transfer Client Portfolio"
                    name="transfer_client_portfolio"
                >
                    <setting
                        string="Transfer Client Portfolio Activities"
                        help="Transfer Activities When Change Salesperson"
                    >
                        <field name="transfer_activities" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
