<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://www.example.com/nested"
           xmlns:tns="http://www.example.com/nested"
           elementFormDefault="qualified">

    <xs:complexType name="ChildType">
        <xs:sequence>
            <xs:element name="value" type="xs:string"/>
        </xs:sequence>
        <xs:attribute name="code" type="xs:string" use="optional"/>
    </xs:complexType>

    <xs:complexType name="ItemType">
        <xs:sequence>
            <xs:element name="price" type="xs:decimal"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ParentType">
        <xs:sequence>
            <xs:element name="owner" type="xs:string"/>
            <xs:element name="child" type="tns:ChildType" minOccurs="0"/>
            <xs:element name="items" type="tns:ItemType" maxOccurs="unbounded" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
