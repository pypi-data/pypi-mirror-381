@event_handler("phone_collection", "–°–æ–±–∏—Ä–∞–µ—Ç –Ω–æ–º–µ—Ä —Ç–µ–ª–µ—Ñ–æ–Ω–∞")
async def collect_phone(user_id: int, event_data: dict):
    """–°–±–æ—Ä –Ω–æ–º–µ—Ä–∞ —Ç–µ–ª–µ—Ñ–æ–Ω–∞"""
