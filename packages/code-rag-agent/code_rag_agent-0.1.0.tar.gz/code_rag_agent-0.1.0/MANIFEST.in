# Include documentation files
include README.md
include LICENSE

# Include configuration files
include pyproject.toml
include .env.example

# Include all Python files
recursive-include src *.py

# Include test files
recursive-include tests *.py

# Exclude development files
prune .venv
prune venv
prune .git
prune __pycache__
prune *.egg-info
global-exclude *.pyc
global-exclude .DS_Store

# Explicitly exclude sensitive files (security)
global-exclude .env
global-exclude .env.local
global-exclude *.key
global-exclude *.pem
global-exclude *credentials*
global-exclude *secret*
