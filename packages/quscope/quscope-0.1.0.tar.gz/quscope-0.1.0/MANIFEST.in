# Include important metadata files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include requirements-dev.txt

# Include documentation
recursive-include docs *.rst *.md *.py
recursive-include docs/_static *
recursive-include docs/_templates *
include docs/Makefile
include docs/make.bat
include docs/requirements.txt

# Include example notebooks
recursive-include notebooks *.ipynb *.py *.md
recursive-include notebooks *.png *.jpg *.jpeg *.gif
# Exclude large notebooks from source distribution to keep PyPI package small
recursive-exclude notebooks *.ipynb
recursive-exclude docs/notebooks *.ipynb

# Include test data and fixtures
recursive-include tests *.py *.json *.txt *.png *.jpg

# Include configuration files
include .readthedocs.yaml
include pyproject.toml
include setup.py

# Ensure runtime data files are packaged
include src/quscope/utils/kirkland.json

# Exclude development and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .coverage
global-exclude .pytest_cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
exclude .DS_Store
exclude Thumbs.db
