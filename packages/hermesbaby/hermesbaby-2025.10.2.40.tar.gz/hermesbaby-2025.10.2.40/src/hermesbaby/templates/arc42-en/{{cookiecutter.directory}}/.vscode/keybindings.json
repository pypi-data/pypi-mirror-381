[
    {
        "key": "shift+win+f",
        "command": "extension.pasteImage",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+q",
        "command": "extension.openFileFromPath",
        "when": "!terminalFocus"
    },
    {
        "key": "alt+d",
        "command": "seito-openfile.openFileFromText",
        "when": "editorTextFocus"
    },


    {
        "key": "ctrl+alt+f",
        "command": "search-in-current-file.searchInCurrentFile",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+alt+f",
        "command": "search-in-current-file.searchInCurrentFile",
        "when": "editorFocus && findInputFocussed"
    }
]
