{
    "Visual Studio Code": {
        "tags": ["authoring", "edit"],
        "website": "https://code.visualstudio.com/",
        "install": {
            "windows" : "scoop bucket add extras && scoop install vscode"
        },
        "run": {
            "windows" : "code",
            "linux" : "code"
        }
    },
    "diagrams.net (formerly draw.io)": {
        "tags": ["authoring", "build", "headless"],
        "website": "https://www.diagrams.net/",
        "install": {
            "windows" : "scoop bucket add extras && scoop install draw.io"
        },
        "run": {
            "windows" : "draw.io",
            "linux" : "drawio"
        }
    },
    "Node.js": {
        "tags": ["authoring", "build", "headless"],
        "website": "https://nodejs.org/",
        "install": {
            "windows" : "scoop install nodejs"
        },
        "run": {
            "windows" : "node",
            "linux" : "node"
        }
    },
    "Java": {
        "tags": ["authoring", "build", "headless"],
        "website": "https://www.java.com/",
        "install": {
            "windows" : "scoop bucket add java && scoop install openjdk"
        },
        "run": {
            "windows" : "java",
            "linux" : "java"
        }
    },
    "Graphviz": {
        "tags": ["authoring", "build", "headless"],
        "website": "https://graphviz.org/",
        "install": {
            "windows" : "scoop install graphviz"
        },
        "run": {
            "windows" : "dot",
            "linux" : "dot"
        }
    },
    "Mermaid CLI": {
        "tags": ["authoring", "build", "headless"],
        "website": "https://mermaid.js.org/",
        "install": {
            "windows" : "npm install -g @mermaid-js/mermaid-cli"
        },
        "run": {
            "windows" : "mmdc",
            "linux" : "mmdc"
        }
    }
}
