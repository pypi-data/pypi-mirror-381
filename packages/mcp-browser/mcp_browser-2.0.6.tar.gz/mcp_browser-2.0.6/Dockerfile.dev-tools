# Development Tools Dockerfile for MCP Browser
# Provides additional development and debugging tools

FROM python:3.11-slim

# Install system dependencies and development tools
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    wget \
    unzip \
    jq \
    tree \
    htop \
    vim \
    nano \
    net-tools \
    iputils-ping \
    telnet \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js for extension tools
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs

# Install Chrome for extension testing
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - && \
    echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list && \
    apt-get update && \
    apt-get install -y google-chrome-stable && \
    rm -rf /var/lib/apt/lists/*

# Install Python development tools
RUN pip install --no-cache-dir \
    ipython \
    jupyter \
    black \
    ruff \
    mypy \
    pytest \
    pytest-cov \
    pytest-asyncio \
    httpx \
    websockets \
    requests

# Install Chrome extension development tools
RUN npm install -g \
    web-ext \
    chrome-extension-cli \
    lighthouse

# Create workspace
WORKDIR /workspace

# Default command
CMD ["bash"]