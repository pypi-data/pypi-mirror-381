{
  "storage": {
    "base_path": "~/.mcp-browser/data",
    "max_file_size_mb": 100,
    "retention_days": 30,
    "compression": true,
    "index_messages": true
  },
  "websocket": {
    "port_range": [8875, 8895],
    "host": "0.0.0.0",
    "max_connections": 10,
    "ping_interval": 30,
    "ping_timeout": 10
  },
  "logging": {
    "level": "DEBUG",
    "format": "%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s",
    "file_rotation": {
      "max_bytes": 10485760,
      "backup_count": 5
    }
  },
  "dashboard": {
    "port": 8080,
    "host": "localhost",
    "auto_open": true,
    "refresh_interval": 5000
  },
  "mcp": {
    "tools": {
      "browser_navigate": {
        "enabled": true,
        "timeout": 30000
      },
      "browser_query_logs": {
        "enabled": true,
        "max_results": 1000
      },
      "browser_screenshot": {
        "enabled": true,
        "quality": 90,
        "fullpage": true
      }
    }
  },
  "security": {
    "allowed_origins": ["http://localhost", "https://localhost"],
    "require_auth": false,
    "api_key": null
  }
}